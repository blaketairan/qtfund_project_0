# QTFund 认证服务开发配置文件示例 (简化版)

# 环境变量配置
SECRET_KEY=your-super-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_EXPIRATION_HOURS=24

# 数据存储配置 (文件存储)
DATA_DIR=./data
USERS_FILE=users.json
LOGIN_LOGS_FILE=login_logs.json
PERMISSIONS_FILE=permissions.json
TOKEN_BLACKLIST_FILE=token_blacklist.json

# 服务配置
SERVER_HOST=0.0.0.0
SERVER_PORT=9000
DEBUG=False
WORKERS=2

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/auth_service.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# 安全配置
BCRYPT_ROUNDS=12
JWT_ALGORITHM=HS256
SESSION_TIMEOUT=86400

# 权限配置
DEFAULT_USER_ROLE=user
ADMIN_REGISTRATION_ENABLED=False

# 限流配置 (简化版)
LOGIN_RATE_LIMIT=5/minute
API_RATE_LIMIT=100/minute
FAILED_LOGIN_LOCKOUT_MINUTES=15
MAX_FAILED_ATTEMPTS=5

# CORS配置
CORS_ORIGINS=http://localhost:3000,https://qtfund.local

# 备份配置
BACKUP_ENABLED=True
BACKUP_INTERVAL_HOURS=24
BACKUP_KEEP_DAYS=30